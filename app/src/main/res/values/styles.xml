<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_color_primary</item>
        <item name="colorPrimaryVariant">@color/material_color_primary_variant</item>
        <item name="colorOnPrimary">@color/material_color_on_primary</item>
        <item name="colorSecondary">@color/material_color_secondary</item>
        <item name="colorSecondaryVariant">@color/material_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/material_color_on_secondary</item>

        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>

        <item name="appBarLayoutStyle">@style/AppTheme.AppBarLayout</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheetDialog.Keyboard</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface" />

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog" />

    <style name="AppTheme.BottomSheetDialog.Keyboard">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
